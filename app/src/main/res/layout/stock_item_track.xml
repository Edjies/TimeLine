<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_item_single_line_height"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="100dp"
        android:layout_height="@dimen/base_item_single_line_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_item_padding"
        android:paddingRight="@dimen/base_item_padding"
        android:maxLines="1"
        android:text="00700"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/base_item_main_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tv_code"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_high"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/base_item_main_text"
            android:text="12.47"/>

        <TextView
            android:id="@+id/tv_low"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/base_item_main_text"
            android:text="12.47"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="@dimen/base_item_main_text"
            android:text="11-26 è‡³ 01-13"/>
    </LinearLayout>


</RelativeLayout>