<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_item_single_line_height"
    android:background="?selectableItemBackground">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_item_single_line_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_item_padding"
        android:paddingRight="@dimen/base_item_padding"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:text="sdfasdf"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/base_item_main_text"/>

    <TextView
        android:id="@+id/tv_et"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_item_single_line_height"
        android:layout_toRightOf="@id/tv_title"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:text="30'"
        android:textSize="12sp"
        />

    <CheckBox
        android:id="@+id/cb_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base_item_padding"/>


</RelativeLayout>